<Window x:Class="ToursAppKuksheva.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursAppKuksheva"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Height="55" Margin="57,10,0,0" VerticalAlignment="Top" Width="72" Source="Resources/cosmos.jpg"/>
        <TextBlock HorizontalAlignment="Left" Margin="324,21,0,0" TextWrapping="Wrap" Text="Отели и гостиницы" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Grid Background="#FFC4F371" Panel.ZIndex="-2"/>
        <Grid Grid.Row="2" Background="#FFC4F371" />
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility='Hidden' ContentRendered="MainFrame_ContentRendered" />
        <Button x:Name="BtnBack" Content="Назад" HorizontalAlignment="Left" Margin="607,21,0,0" VerticalAlignment="Top"   Click="BtnBack_Click"/>

    </Grid>
</Window>
